{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id":  "https://raw.githubusercontent.com/Leonardo2718/omr/jaguar/jitbuilder/apigen/schema/api-class.schema.json",
    "title": "Project Jaguar: API Class Description Format",
    "description": "Format for specifying API classes",
    "$comment": "Copyright (c) 2018 IBM Corp. and others (see LICENSE.md)",
    "$comment": "SPDX-License-Identifier: EPL-2.0 OR Apache-2.0 OR GPL-2.0 WITH Classpath-exception-2.0 OR LicenseRef-GPL-2.0 WITH Assembly-exception",
    "type": "object",
    "properties": {
        "name": { "description": "name of the API class", "type": "string" },
        "short-name": { "description": "short for the class", "type": "string" },
        "flags": {
            "description": "flags for the API service",
            "type": "array",
            "items": { "enum": [ "creatable", "has_extras_header", "allocates_class" ] }
        },
        "types": {
            "description": "Definition of datatypes used by the API",
            "type": "array",
            "items": { "$ref": "api-type.schema.json" }
        },
        "fields": {
            "description": "Definition of data fields offered by the API",
            "type": "array",
            "items": { "$ref": "api-field.schema.json" }
        },
        "constructors": {
            "description": "Definition of class constructors",
            "type": "array",
            "items": { "$ref": "api-service.schema.json" }
        },
        "services": {
            "description": "Definition of services (functions, methods, etc.) offered by the API",
            "type": "array",
            "items": { "$ref": "api-service.schema.json" }
        }
    },
    "required": [ "name", "types", "fields", "constructors", "services", "flags" ]
}
